<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notif"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="150dp" >

    <LinearLayout
        android:id="@+id/video_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/video_title"
            style="@style/NotificationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/notification_overlay_short" >
        </TextView>

        <TextView
            android:id="@+id/video_description"
            style="@style/NotificationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/notification_overlay_short" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/video_thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_info"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
         />

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="230dp">

        <ImageView
            android:id="@+id/notification_overlay_stripes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pvn_horizontal_stripes" />

        <ImageView
            android:id="@+id/notification_overlay_icon"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignBottom="@id/notification_overlay_stripes"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="3dip"
            android:src="@drawable/pvn_notification_overlay_icon" />

        <TextView
            android:id="@+id/notification_overlay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/notification_overlay_stripes"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/notification_overlay_icon"
            android:text="@string/notification_overlay_long"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_overlay_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/notification_overlay_stripes"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3.5dip"
            android:layout_marginRight="5dip"
            android:background="#000000"
            android:padding="1dip"
            android:text="16:40"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
